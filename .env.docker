# Flask 應用配置
FLASK_ENV=development
FLASK_DEBUG=True

# 安全密鑰 (請在生產環境中更換為隨機字串)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# MariaDB 資料庫配置 (Docker 環境)
DB_HOST=db
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=edgesurvivor

# 資料庫連線字串 (Docker 環境)
DATABASE_URL=mysql+pymysql://user:password@db:3306/edgesurvivor
DEV_DATABASE_URL=mysql+pymysql://user:password@db:3306/edgesurvivor

# Redis 配置 (用於 Socket.IO 和 Session)
REDIS_URL=redis://localhost:6379/0

# 檔案上傳配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# CORS 允許的來源 (Docker 前端端口)
FRONTEND_URL=http://localhost:8080

# Email 配置 (如果需要的話)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# 其他配置
TIMEZONE=Asia/Taipei
