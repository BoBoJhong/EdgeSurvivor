# Flask 應用配置
FLASK_ENV=development
FLASK_DEBUG=True

# 安全密鑰 (請在生產環境中更換為隨機字串)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# MariaDB 資料庫配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=edgesurvivor_user
DB_PASSWORD=your_password_here
DB_NAME=edgesurvivor

# 資料庫連線字串 (自動從上述參數組成)
DATABASE_URL=mysql+pymysql://edgesurvivor_user:your_password_here@localhost:3306/edgesurvivor

# 開發環境資料庫 (可選)
DEV_DATABASE_URL=mysql+pymysql://edgesurvivor_user:your_password_here@localhost:3306/edgesurvivor_dev

# Redis 配置 (用於 Socket.IO 和 Session)
REDIS_URL=redis://localhost:6379/0

# 檔案上傳配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# CORS 允許的來源
FRONTEND_URL=http://localhost:3000

# Email 配置 (如果需要的話)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# 其他配置
TIMEZONE=Asia/Taipei